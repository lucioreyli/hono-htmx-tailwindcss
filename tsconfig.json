{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["typed-htmx", "bun"],
    "jsx": "react-jsx",
    // "jsxImportSource": "typed-htmx/typed-html", // use when coding
    "jsxImportSource": "hono/jsx", // use when building
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
  // "include": ["src/**/*"],
  // "exclude": ["node_modules"]
}
