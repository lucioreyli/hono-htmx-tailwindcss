{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["esnext"],
    "types": ["bun", "vite/client", "typed-htmx"],
    "jsx": "react-jsx",
    "jsxImportSource": "typed-htmx/typed-html", // Enable htmx typos
    // "jsxImportSource": "hono/jsx", // Fix building
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
